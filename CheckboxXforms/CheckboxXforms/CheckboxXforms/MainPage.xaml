             x:Class="CheckboxXforms.MainPage"
             Padding="20">

    <StackLayout>
	<Label Text="Checkbox Xamarin forms" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

        <controls:CheckBox x:Name="cb1" DefaultText="Opção 1"  CheckedChanged="VerificarSelecao" HorizontalOptions="FillAndExpand"/>
        <controls:CheckBox DefaultText="Opção 2" CheckedChanged="VerificarSelecao" HorizontalOptions="FillAndExpand"/>
        <controls:CheckBox DefaultText="Opção 3" CheckedChanged="VerificarSelecao" HorizontalOptions="FillAndExpand"/>
        <controls:CheckBox DefaultText="Opção 4" CheckedChanged="VerificarSelecao" HorizontalOptions="FillAndExpand"/>


    </StackLayout>

</ContentPage>
